<%
   skills = [
           {name: "PHP", category: "Programming", value: 82},
           {name: "IT Management", category: "Management", value: 36}
   ]
%>

<div class="row">
  <div class="span3">
    <div class="pull-left thumbnail">
      <img src="<%= image %>"/>
    </div>
    <% if ownAccount %>
        <%= link("user/#{url}/edit", "Edit profile", "btn btn-primary") %>
    <% end %>
    <% unless invitations.empty? %>
        <div class="btn-group">
          <button class="btn btn-success dropdown-toggle" data-toggle="dropdown">
            Invite to project
            <span class="caret"></span>
          </button>
          <ul class="dropdown-menu">
            <% invitations.each do |project| %>
                <li><%= link("project/#{project.url}/invite/#{url}/", project.title) %></li>
            <% end %>
          </ul>
        </div>
    <% end %>
    <% unless excludes.empty? %>
        <div class="btn-group">
          <button class="btn btn-danger dropdown-toggle" data-toggle="dropdown">
            Replace from project
            <span class="caret"></span>
          </button>
          <ul class="dropdown-menu">
            <% excludes.each do |project| %>
                <li><%= link("project/#{project.url}/remove/#{url}/", project.title) %></li>
            <% end %>
          </ul>
        </div>
    <% end %>
  </div>
  <div class="span7">
    <h4 class="gap50">Personal Dates</h4>
    <% if value("forename") or value("surname") or value("birthday") or value("website") or value("about") %>
        <div class="form-horizontal form-only-text">
          <%= if value("forename") then
                view("template", "control_group", {label: {title: "forename"}, controls: ["<div class='gap50-left'>#{forename}</div>"]})
              end %>
          <%= if value("surname") then
                view("template", "control_group", {label: {title: "surname"}, controls: ["<div class='gap50-left'>#{surname}</div>"]})
              end %>
          <%= if value("birthday") then
                view("template", "control_group", {label: {title: "birthday"}, controls: ["<div class='gap50-left'>#{birthday}</div>"]})
              end %>
          <%= if value("website") then
                view("template", "control_group", {label: {title: "website"}, controls: ["<div class='gap50-left'>#{website}</div>"]})
              end %>
          <%= if value("about") then
                view("template", "control_group", {label: {title: "about"}, controls: ["<div class='gap50-left'>#{about}</div>"]})
          end %>
        </div>
    <% end %>

  </div>

</div>



<div class="row">
  <div class="span10" id="user-skills-header">
    <h4><%= username %>'s Skills</h4>
    <%= view("template", "skills_show", {items: skills}) %>
  </div>
</div>


