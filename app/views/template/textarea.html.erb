<%#
required
 title      (string)  Label and Placeholder for the input
optional
 current    (string)  The current value of the input
 name       (string)  The name-attribute; default: title.downcase
 input_tags (hash)    More input tags
 required   (boolean) required flag
 password   (boolean) password flag
 wrap_tags  (hash)    A hash with tags
 rows       (int)     default: 3
%>
<%= view("template", "control_group", {
        label: {
                title: title,
                name: value(:name),
                required: value(:required, false)
        },
        controls: [{
                           view: :textarea,
                           title: title,
                           current: value(:current, ""),
                           name: value(:name),
                           input_tags: value(:input_tags),
                           password: value(:password),
                           wrap_tags: value(:wrap_tags),
                           rows: value(:rows)
                   }]
}) %>