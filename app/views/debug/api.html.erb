<div class="row">
    <form method="post" class="form-horizontal span6">
        <div class="control-group">
            <label class="control-label" for="url">Url</label>
            <div class="controls">
                <input type="text" id="url" name="url" placeholder="Url" />
            </div>
        </div>
        <div class="control-group">
            <label class="control-label" for="type">Type</label>
            <div class="controls">
                <select id="type" name="type">
                    <option value="get">GET</option>
                    <option value="post">POST</option>
                    <option value="put">PUT</option>
                    <option value="delete">DELETE</option>
                </select>
            </div>
        </div>
        <div class="control-group">
            <label class="control-label">Parameters</label>
            <div class="controls">
                <button type="button" id="addParameter" class="btn">add</button>
                <button type="button" id="removeAllParameter" class="btn btn-danger">remove all</button>
                <div id="parameters"></div>
            </div>
        </div>
        <div class="control-group">
            <label class="control-label" for="accept">Type</label>
            <div class="controls">
                <select id="accept" name="accept">
                  <option value="html">HTML</option>
                  <option value="json">JSON</option>
                  <option value="xml">XML</option>
                </select>
            </div>
        </div>
        <div class="control-group">
            <div class="controls">
                <button type="submit" class="btn btn-primary">test</button>
            </div>
        </div>

    </form>
    <div id="help" class="span4">
        <table class="table table-striped table-condensed">
          <thead>
            <tr>
              <th>Url</th>
              <th>Type</th>
              <th>Parameters</th>
            </tr>
          </thead>
          <tbody>
              <% help.each do |h| %>
                <tr>
                    <td><%= h[0] %></td>
                    <td><%= h[1] %></td>
                    <td><%= h[2] %></td>
                </tr>
              <% end %>
          </tbody>
        </table>
    </div>
</div>

<div class="row">
  <div id="result" class="span10"></div>
</div>


<% js "debug" %>