<!doctype html>
<html>
    <head>
      <meta charset='utf-8'>
      <title><%= title %></title>
      <%= css "/bootstrap/css/bootstrap.min" %>
      <%= less "style" %>
      <link href='http://fonts.googleapis.com/css?family=Titillium+Web:400,400italic,600,600italic,700,700italic,900,300,300italic' rel='stylesheet' type='text/css'>
    </head>
    <body>
        <div id="header">
          <div class="wrapper">
            <a href="/" id="logo"><h1 class="hide-text">p squared – project platform</h1></a>
            <form method="get" action="" id="search">
              <div class="input-prepend input-append">
                <div class="btn-group">
                  <button class="btn dropdown-toggle input-small" data-toggle="dropdown"><i class="icon-<%= {All: "star", Projects: "briefcase", Users: "user"}[search.to_sym] %>"></i> <span class="text"><%= search %></span> <span class="caret"></span></button>
                  <ul class="dropdown-menu">
                    <li><a href="#"><i class="icon-star"></i> All</a></li>
                    <li class="divider"></li>
                    <li><a href="#"><i class="icon-briefcase"></i> Projects</a></li>
                    <li><a href="#"><i class="icon-user"></i> Users</a></li>
                  </ul>
                </div>
                <input name="query" type="text" id="prependedDropdownButton" class="search-query" value="<%= query %>" placeholder="Search for <%= {All: "Projects and Users", Projects: "Projects", Users: "Users"}[search.to_sym] %>" />
                <button type="submit" class="btn"><i class="icon-search"></i> Search</button>
              </div>
            </form>
            <ul id="menu">
              <li><a href="<%= request.base_url %>/projects"><i class="icon-briefcase icon-white"></i>Projects</a></li>
              <li><a href="<%= request.base_url %>/users"><i class="icon-user icon-white"></i>Users</a></li>
              <% if @username %>
                  <li class="user"><a href="user/<%= @username %>"><%= @username %></a></li>
                  <li><a href="logout"><i class="icon-off icon-white"></i>Logout</a></li>
              <% end %>
            </ul>
          </div>
        </div>
        <div id="wrapper" class="wrapper">
          <div id="wrapperTop"></div>
            <h2><%= title %></h2>
            <%= yield %>
          <div id="wrapperBottom"></div>
        </div>
        <div id="footer">
          <div class="wrapper">
            <span class="name">&COPY; p<sup>2</sup> – project platform</span>
            <ul id="submenu">
              <li><a href="contact"><i class="icon-envelope icon-white"></i>contact</a></li>
              <li><a href="imprint"><i class="icon-align-justify icon-white"></i>imprint</a></li>
            </ul>
            <span class="license">Apache License, Version 2</span>
          </div>
        </div>
      <script>
        var p_squared = {
            base_url: "<%= request.base_url %>"
        };
      </script>
      <%= js "jquery-1.8.3",
             "/bootstrap/js/bootstrap.min",
             "less-1.3.0.min",
             "layout"
      %>
    </body>
</html>